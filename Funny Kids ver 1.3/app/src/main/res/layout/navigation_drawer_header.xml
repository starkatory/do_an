<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="180dp"
    android:background="@drawable/navigation_header_background">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/img_app"
        android:src="@drawable/leroi"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_app"
        android:layout_toRightOf="@+id/img_app"
        android:text="Crazy Kid"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="@color/red"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_app"
        android:layout_toRightOf="@+id/img_app"
        android:text="Vodka Team"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/yellow"
        android:layout_marginLeft="20dp"
        />
</RelativeLayout>