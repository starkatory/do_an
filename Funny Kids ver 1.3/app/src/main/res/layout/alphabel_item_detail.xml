<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pinkj"
    android:id="@+id/layout_alphabel_item_detail">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A--a"
            android:textSize="50dp"
            android:gravity="center"
            android:textColor="#FF0000"
            android:id="@+id/letter_item"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgAlphabeldetail"
            android:src="@drawable/alphabel_item_detail_a"
            android:layout_below="@+id/letter_item"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</LinearLayout>